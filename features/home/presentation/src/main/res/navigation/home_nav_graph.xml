<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.presentation.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_letsgo_nav_graph"
            app:destination="@id/letsgo_nav_graph" />
        <argument
            android:name="PIC_ID"
            app:argType="integer" />
        <argument
            android:name="GREETING"
            app:argType="string" />
    </fragment>

    <include app:graph="@navigation/letsgo_nav_graph" />
</navigation>